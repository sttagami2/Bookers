<div class="container">
  
  <div class="row">

    <!-- User info --><!-- User info --><!-- User info --><!-- User info -->
    <div class="col-xs-3">
      <%= render 'books/info', {book: @book, user: @user} %>
    </div>

      <!-- User info --><!-- User info --><!-- User info --><!-- User info -->
    <div class="col-xs-9">
    <h2>Users</h2>
      <div class="alt-table-responsive">
        <table class="table">
          <tr>
            <th class="col-xs-2">image</th>
            <th class="col-xs-4">name</th>
            <th class="col-xs-6 ml-5"></th>
          </tr>
          <!-- form_forを使う？ -->
            

          <% @users.each do |u| %>
            <tr>
              <td class="col-xs-2"><%= attachment_image_tag u, :profile_image, size: '50x50', fallback: "no_image.jpg"%></td>
              <td class="col-xs-4"><%= u.name %></td>
              <td class="col-xs-6"><%= link_to "Show", user_path(u.id) %></td>
            </tr>
          <% end %>
          <!-- form_forを使う？ -->
        </table>
      </div>
    </div>
  </div>
</div>
