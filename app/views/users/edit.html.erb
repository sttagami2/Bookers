<section>
  <div class="container">
  <h2>User info</h2>

  <%# form_for %>
  <%= form_for(@user) do |f| %>
    <p>Name</p>
    <%= f.text_field :name %>
    <%# title情報が反映されている入力フォームを下に作成 %>

    <p>Image</p>
    <%= f.file_field :image %>
    <%# body情報が反映されている入力フォームを下に作成 %>
    
    <div class=".row">
    <div class=.col>
      <p>Introduction</p>
    </div>
    <div class=".col">
      <%= f.text_area :introduction %>
    </div>

    <%= f.submit 'Update User' %>
  <% end %>
<%# form_for %>
</section>